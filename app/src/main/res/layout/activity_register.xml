<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bib2"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Register">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="50dp"
        android:text="Inscription"
        android:textColor="#000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nomPrenom"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:hint="Nom et PrÃ©nom "
        android:textAlignment="center"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:textAlignment="center"
        android:background="@android:color/white"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/mot_de_passe"
        android:textAlignment="center"
        android:background="@android:color/white"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:hint="Phone "
        android:textAlignment="center"
        android:inputType="number" />


    <CheckBox
        android:id="@+id/enseignant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enseignant"
        android:textColor="#000"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/etudiant"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Etudiant"
        android:textColor="#000"
        android:textSize="20dp"/>

    <CheckBox
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrateur"
        android:textColor="#000"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/choiseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choisir" />

    <ImageView
        android:id="@+id/imageToUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />


    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#d5ead3"
        android:text="@string/s_inscrire" />


</LinearLayout>
