<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bib2"
    tools:context=".AddBook">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter un Livre"
            android:textSize="50dp"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/title"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer le Titre"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/specialite"
            android:background="#ffff"
            android:padding="10dp"
            android:hint="Entrer la spécialitée"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/auteur"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer l'Auteur"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/origine"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer l'Origine"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/nbCopie"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer le Nombre de Copies"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:id="@+id/nomDonneur"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer le Nom de Donneur"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/situation"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer Sa Situation"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/cin"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer le Numéro CIN"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:id="@+id/telephoneDonneur"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer le Téléphone de Donneur"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <ImageView
            android:id="@+id/bImageIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"/>

        <EditText
            android:id="@+id/description"
            android:background="#ffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:hint="Entrer une petite Description"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:minHeight="120dp"
            android:layout_gravity="start"/>

        <Button
            android:id="@+id/uploadBtn"
            android:text="Upload"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/menu_nav">

        </android.support.design.widget.BottomNavigationView>


    </LinearLayout>


</ScrollView>
