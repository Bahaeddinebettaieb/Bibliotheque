<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bib2"
    tools:context=".AjouterLivre">

    <TextView
        android:id="@+id/ajouterProduit"
        android:text="Ajouter Livre"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/titre"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/titre"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/specialite"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/specialite"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/auteur"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/auteur"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/origine"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/origine"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/nbCopie"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/nombre_de_copies"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="number" />

    <EditText
        android:id="@+id/nomDonneur"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/nom_donneur"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/situation"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/situation_professionnelle"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/cin"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="number" />

    <EditText
        android:id="@+id/telephoneDonneur"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/t_l_phone_donneur"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:inputType="number" />


    <Button
        android:id="@+id/ajouter"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#d5ead3"
        android:text="@string/ajouter_livre" />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_nav">

    </android.support.design.widget.BottomNavigationView>


</LinearLayout>
